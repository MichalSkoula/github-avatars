{
  "manifest_version": 3,
  "name": "GitHub Avatars",
  "version": "0.4",
  "description": "Increases the size of user avatars in GitHub issues",
  "author": "Michal Skoula",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "content_security_policy": {},
  "host_permissions": [
    "https://github.com/*"
  ]
}
